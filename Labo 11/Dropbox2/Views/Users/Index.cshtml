@model Dropbox2.Presentation.PMExternalUser
@{
    ViewBag.Title = "Index";
}

<h2>Nieuwe user toevoegen</h2>

@using (Html.BeginForm("Index", "Users", FormMethod.Post))
{
    <label for="username">Username</label>
    @Html.EditorFor(model => model.ExternalUser.Username)
    <br><br>
    <label for="password">Password</label>
    @Html.PasswordFor(model => model.ExternalUser.Password)
    <br><br>
    <label for="checkbox">Blocked</label>
    @Html.CheckBoxFor(model => model.ExternalUser.Blocked)
    
    <input type="submit" name="submit" value="Create" />
}
<table>
    <tr>
        <td>Username</td>
        <td>Blocked</td>
        <td></td>
    </tr>
@for (int i = 0; i < Model.Lijst.Count; i++)
{
    <tr>
        <td>@Model.Lijst[i].Username</td>
        <td>
            @if (@Model.Lijst[i].Blocked)
            {
                <input type="checkbox" checked name="blocked"/>
            }
            else
            {
                <input type="checkbox" name="blocked" />
            }

        </td>
        <td><a href="/edit?id=@Model.Lijst[i].Id">Edit</a></td>
    </tr>
}
</table>